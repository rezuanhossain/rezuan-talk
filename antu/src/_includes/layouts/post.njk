---
layout: layouts/base.njk
---
<div class="post-layout">
  <article class="article-shell post-main">
    <header class="post-hero">
      <a class="back-link" href="/blog/">‚Üê Back to resources</a>
      <div class="post-headline">
        <p class="badge">{{ category }}</p>
        <h1>{{ title }}</h1>
        <div class="post-meta">
          <div class="author-block">
            <div class="avatar-ring">RZ</div>
            <div>
              <strong>Rezuan</strong>
              <small>Published {{ page.date | readableDate }}</small>
            </div>
          </div>
          <div class="meta-tags">
            <span>{{ category }}</span>
            {% if tags %}
            {% for tag in tags %}
            {% if tag != "posts" %}
            <span>{{ tag }}</span>
            {% endif %}
            {% endfor %}
            {% endif %}
          </div>
        </div>
      </div>
    </header>
    {% if cover %}
    <figure class="post-cover">
      <img src="{{ cover }}" alt="{{ title }} featured image" loading="lazy" />
    </figure>
    {% endif %}
    <div class="article-body">
      {{ content | safe }}
    </div>
    <footer class="article-footer">
      <div class="share-actions">
        <p>Share this playbook</p>
        <div class="share-buttons">
          <a href="https://twitter.com/intent/tweet?url={{ page.url | url }}&text={{ title | url }}" target="_blank" rel="noopener">ùïè</a>
          <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ page.url | url }}" target="_blank" rel="noopener">in</a>
          <button type="button" data-copy="{{ page.url | url }}">Copy link</button>
        </div>
      </div>
      <div class="comments-placeholder">
        <p>Comments (coming soon) ¬∑ Want feedback? <a href="/contact/">Ping me here.</a></p>
      </div>
    </footer>
    <section class="related-section">
      <h2>Related posts</h2>
      <div class="related-grid">
        {% set related = collections.posts | reverse | relatedPosts(page.url, 3) %}
        {% for item in related %}
        <article>
          <a href="{{ item.url }}">
            {% if item.data.cover %}
            <img src="{{ item.data.cover }}" alt="{{ item.data.title }} thumbnail" loading="lazy" />
            {% endif %}
            <div>
              <p class="badge">{{ item.data.category }}</p>
              <h3>{{ item.data.title }}</h3>
              <small>{{ item.date | readableDate }}</small>
            </div>
          </a>
        </article>
        {% endfor %}
      </div>
    </section>
  </article>
  <aside class="post-sidebar">
    <section class="subscribe-box">
      <p class="badge">Daily drops</p>
      <h3>Marketing Talk with Rezuan</h3>
      <p>One actionable affiliate and CRO insight in your inbox every morning. No fluff, just the playbook.</p>
      <form name="sidebar-subscribe" method="post" data-netlify="true">
        <input type="email" name="email" placeholder="hey@brand.com" required />
        <button type="submit">Subscribe ‚Üí</button>
      </form>
    </section>
    <section class="recent-box">
      <h3>Latest posts</h3>
      <ul>
        {% for item in collections.posts | latestPosts(page.url, 5) %}
        <li>
          <a href="{{ item.url }}">
            <div>
              <p class="mini-title">{{ item.data.title }}</p>
              <small>{{ item.date | readableDate }}</small>
            </div>
          </a>
        </li>
        {% endfor %}
      </ul>
    </section>
  </aside>
</div>
<script>
  document.querySelectorAll(".share-buttons button[data-copy]").forEach((btn) => {
    btn.addEventListener("click", async () => {
      const url = window.location.origin + btn.dataset.copy;
      await navigator.clipboard.writeText(url);
      btn.textContent = "Copied!";
      setTimeout(() => (btn.textContent = "Copy link"), 1500);
    });
  });
</script>
